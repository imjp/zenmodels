<h2><%= @user.name %></h2> 

<div class="span6 pull-left"> 
	<ul id="tab" class="nav nav-tabs">
		<li class="active"><a href="#profile" data-toggle="tab">Profile</a></li>
		<li><a href="#contact" data-toggle="tab">Contact</a></li>  
	</ul>
	<div class="tab-content">  
		<div class="tab-pane tabs-left active" id="profile">
			<ul> 
				<li>Height: <%= @user.profile.height %></li>
				<li>Bust: <%= @user.profile.bust %></li>
				<li>Waist: <%= @user.profile.bust %></li>
				<li>Hips: <%= @user.profile.hips %></li>
				<li>Shoes: <%= @user.profile.shoes %></li>
				<li>Eyes: <%= @user.profile.eyes %></li>
				<li>Hair: <%= @user.profile.hair %></li>
			</ul>
		</div> 
		
		<div class="tab-pane" id="contact"> 
			<ul> 
				<li>Facebook: <%= @user.profile.facebook %></li>
				<li>Profile: <%= @user.profile.phone %></li> 
			</ul> 
		</div> 
	</div> 
</div>

<div class="span6 pull-left">
	<%= link_to image_tag(@user.profile.photos, :alt => @user.name), @user.profile.photos, :class => "fancybox", :"data-fancybox-group" => "fancybox" %>
</div>