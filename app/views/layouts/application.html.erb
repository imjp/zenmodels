<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js", "application" %> 
	
	<!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
	
  <%= csrf_meta_tags %>
	
	<link rel="shortcut icon" href="<%= asset_path "favicon.ico" %>">
</head>
<body>

	<div class="navbar navbar-fixed-top">
		<div class="navbar-inner">
			<div class="container-fluid">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<h1><%= link_to "ZenModels", root_path, { class: "brand" } %> </h1>
				<div class="nav-collapse">
					<ul class="nav">
						<li class="active"><a href="#">Home</a></li>
						<li><a href="#about">About</a></li>
						<li><a href="#contact">Contact</a></li>
					</ul>
					
					<% if user_signed_in? %>
						<p class="navbar-text pull-right">Logged in as <%= link_to current_user.name, edit_user_registration_path %> | <%= link_to "Logout", "/logout"  %></p>
					<% else %>
						<p class="navbar-text pull-right"><%= link_to "Register", new_user_registration_path  %> | <%= link_to "Login", "/login" %></p>
					<% end %>
					
				</div><!--/.nav-collapse -->
			</div>
		</div>
	</div>

	<%- flash.each do |k, v| %>
		<div class="alert alert-success fade in <%= k %>"><a href="#" data-dismiss="alert" class="close">&#215;</a><%= v %></div>
	<% end %>

	<div id="main">
		<%= yield %>
	</div>
</body>
</html>
